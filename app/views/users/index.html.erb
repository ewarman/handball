<div class="container">
  <h1>Handball Participants</h1>
  <table class="table table-hover">
      <thead>
        <tr>
          <th>Last Name</th>
          <th>First Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Profile</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= user.last_name %></td>
          <td><%= user.first_name %></td>
          <td><%= user.email %></td>
          <td><%= user.phone %></td>
          <td><%= link_to "See Profile", user_path(user.id) =%>
        </tr>
        <% end %>
    </tbody>
  </table>
</div>
